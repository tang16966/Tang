<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgourd">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_title_down">
        <ImageView
            android:id="@+id/menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/menu"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGray"
            android:text="@string/title_video"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:background="#fff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请输入字符"
            android:inputType="textMultiLine"
            android:textColor="@color/colorFontGray"
            android:textSize="18dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <Spinner
            android:id="@+id/sp_interface"
            android:layout_width="150dp"
            android:layout_height="30dp"></Spinner>
        <Button
            android:id="@+id/bt_parsing"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_kuang"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorFontGray"
            android:text="解析"/>
    </RelativeLayout>


    <GridView
        android:id="@+id/grid_view"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:verticalSpacing="15dp"></GridView>

</LinearLayout>