<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgourd">

    <include layout="@layout/fragment_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:background="#fff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请输入字符"
            android:inputType="textMultiLine"
            android:textColor="@color/colorFontGray"
            android:textSize="18dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <Spinner
            android:id="@+id/sp_interface"
            android:layout_width="150dp"
            android:layout_height="30dp"></Spinner>
        <Button
            android:id="@+id/bt_parsing"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_kuang"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorFontGray"
            android:text="解析"/>
    </RelativeLayout>


    <GridView
        android:id="@+id/grid_view"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:verticalSpacing="15dp"></GridView>

</LinearLayout>